{
  "name": "docs",
  "private": true,
  "scripts": {
    "dev": "yarn gendocs && nuxi dev",
    "build": "yarn gendocs && nuxi generate --force-build",
    "build:ci": "./scripts/make-schema.sh && yarn build",
    "lint:docs": "cd .. && yarn lint:docs",
    "lint:docs:fix": "cd .. && yarn lint:docs:fix",
    "gendocs": "jiti ./scripts/gen-docs.ts"
  },
  "devDependencies": {
    "@docus/app": "1.3.5",
    "@docus/github": "1.0.4",
    "@docus/social-image": "1.0.3",
    "@docus/theme": "1.2.2",
    "@nuxt/typescript-build": "^2.1.0",
    "fs-extra": "^10.1.0",
    "jiti": "^1.14.0",
    "nuxt": "^3.0.0-rc.8"
  },
  "resolutions": {
    "@docsearch/js": "3.1.0",
    "@docsearch/css": "3.1.0"
  },
  "packageManager": "yarn@3.2.1"
}
